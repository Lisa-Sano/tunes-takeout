<h1>Welcome to Tunes & Takeout!</h1>

<% if current_user %>
  <%= form_tag suggestions_path, method: :get do %>
    <%= label_tag :query, "Search for..." %>
    <%= text_field_tag :query %>

    <%= label_tag :limit, "Limit" %>
    <%= number_field_tag :limit, 10, min: 1, max: 100 %>

    <%= submit_tag "Submit" %>
  <% end %>
<% end %>

<p><%= link_to "See top suggestions", suggestions_path %></p>